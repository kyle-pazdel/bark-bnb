<h4>Add a review:</h4>
<%= form_with model: [ @room, @room.reviews.build ] do |form| %>

  <div class="pb-3">
 
  Rating:
  <%= form.select :rating, [ 1, 2, 3, 4, 5], selected: 5 %>

  </div>
  <p>
    <%= form.label :comment %><br>
    <%= form.text_area :comment %>
  </p>
  <p>
    <%= form.submit %>
  </p>


<% end %>


